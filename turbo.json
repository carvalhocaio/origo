{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env*",
    "tsconfig.json",
    "biome.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*"
  ],
  "tasks": {
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_API_BASE_URL",
        "PORT",
        "HOST"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.json",
        "biome.json",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "tsconfig.json"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
